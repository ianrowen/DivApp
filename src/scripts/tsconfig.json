{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "noImplicitAny": false,
    "strict": false,
    "typeRoots": ["../../node_modules/@types", "../../node_modules"],
    "baseUrl": "../..",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node"
    }
  },
  "include": ["*.ts", "../services/astrologyService.ts", "../**/*.ts"],
  "exclude": ["node_modules"]
}

